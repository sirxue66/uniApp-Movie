.movInfo-mp4{
	width: 100%;
	height: 400rpx;
	position: relative;
}
.movInfo-video{
	height: 100%;
	width: 100%;
}
.movInfo{
	width: 100%;
	height: 420rpx;
	position: relative;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	/* background-color: #FFFFFF; */
	/* border-bottom: #cecece dashed 2px; */
}
.movInfo-pic{
	position: relative;
	height: 420rpx;
	width: 300rpx;
	padding: 20rpx 40rpx;
}
.movInfo-img{
	position: relative;
	width: 220rpx;
	height: 300rpx;
	margin: auto;
}
.movInfo-mess{
	width: 100%;
	height: 100%;
	position: relative;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	padding-top: 20rpx;
}
.movInfo-title{
	font-size: 22px;
	font-weight: bold;
}
.movInfo-introduction{
	font-size: 14px;
}
.movInfo-score{
	width: 380rpx;
	height: 120rpx;
	background-color: #FFFFFF;
	-webkit-border-radius: 10rpx;
	        border-radius: 10rpx;
	margin-top: 20rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	/* 添加阴影效果 */
	-webkit-box-shadow: 3px 3px 10px #555555;
	        box-shadow: 3px 3px 10px #555555;
}
.score-num{
	font-size: 16px;
	margin-left: 10rpx;
}
.socre-star{
	font-size: 14px;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	padding-top: 10rpx;
}
.socre-good{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	padding-top: 30rpx;
}
.movInfo-detail{
	width: 100%;
	height: 400rpx;
	background-color: #FFFFFF;
	font-size: 16px;
	padding: 10rpx;
}
.detail-title{
	font-size: 20px;
	font-weight: bold;
}
.detail-text{
	height: 350rpx;
}
.mov-people{
	height: 400rpx;
	margin-top: 10rpx;
}
.people-title{
	height: 50rpx;
	line-height: 50rpx;
	font-weight: bold;
	font-size: 20px;
}
.people-scroll{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
.people{
	height: 350rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
}
.people-pic{
	height: 300rpx;
	width: 240rpx;
	padding: 20rpx 10rpx;
	padding-bottom: 6rpx;
}
.people-img{
	height: 260rpx;
	width: 220rpx;
}
.people-name{
	height: 50rpx;
	line-height: 50rpx;
	font-size: 16px;
	font-weight: bold;
}

