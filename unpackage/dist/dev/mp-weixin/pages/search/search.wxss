.search{
	background-color: #F1F1F1;
}
.search-header{
	position: fixed;
	height: 50rpx;
	width: 100%;
	padding: 20rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	background-color: black;
	z-index: 1000;
}
.header-pic{
	margin-right: 10rpx;
}
.header-img{
	height: 50rpx;
	width: 50rpx;
}
.header-input{
	height: 50rpx;
	width: 500rpx;
	background-color: #FFFFFF;
	-webkit-border-radius: 6rpx;
	        border-radius: 6rpx;
}
.search-content{
	margin-top: 50rpx;
	position: absolute;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
	padding-top: 50rpx;
}
.search-mov{
	padding: 10rpx 15rpx;
}
.search-mov-pic{
	height: 300rpx;
	width: 220rpx;
}

